		"cross-env": "10.1.0",
		"lefthook": "2.1.1",
		"nx": "22.5.0",
		"oxfmt": "0.32.0",
		"oxlint": "1.47.0",
		"oxlint-tsgolint": "0.12.1",
		"rimraf": "6.1.2",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.3.9"
