{
	"name": "electron-libs",
	"version": "0.0.0",
	"private": true,
	"description": "monorepo for electron libs",
	"keywords": [],
	"license": "MIT",
	"author": "<author>",
	"repository": {
		"type": "git",
		"url": "git@github.com:kavsingh/electron-libs"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"electron": "40.4.0",
			"tsdown": "0.20.3"
		}
	},
	"type": "module",
