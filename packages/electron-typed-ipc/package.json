{
	"name": "@kavsingh/electron-typed-ipc",
	"version": "1.0.0-dev.0",
	"description": "typed electron ipc",
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"files": [
		"./dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/common.d.ts",
				"default": "./dist/common.js"
			},
			"require": {
				"types": "./dist/common.d.cts",
				"default": "./dist/common.cjs"
			}
		},
		"./preload": {
			"types": "./dist/preload.d.cts",
			"default": "./dist/preload.cjs"
		},
		"./main": {
			"import": {
				"types": "./dist/main.d.ts",
				"default": "./dist/main.js"
			},
			"require": {
				"types": "./dist/main.d.cts",
				"default": "./dist/main.cjs"
			}
		},
		"./renderer": {
			"import": {
				"types": "./dist/renderer.d.ts",
				"default": "./dist/renderer.js"
			},
			"require": {
				"types": "./dist/renderer.d.cts",
				"default": "./dist/renderer.cjs"
			}
		},
		"./test/renderer": {
			"import": {
				"types": "./dist/test-renderer.d.ts",
				"default": "./dist/test-renderer.js"
			},
			"require": {
				"types": "./dist/test-renderer.d.cts",
				"default": "./dist/test-renderer.cjs"
			}
		}
	},
	"scripts": {
		"lint": "tsc && eslint .",
		"tdd": "vitest --typecheck --reporter=verbose",
		"test": "vitest run --typecheck --coverage",
		"build": "tsdown",
		"typeinst": "pnpm tsc --extendedDiagnostics | grep Instantiations:"
	},
	"devDependencies": {
		"@tsconfig/node22": "22.0.2",
		"@types/node": "22.18.12",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/eslint-plugin": "1.3.23",
		"electron": "38.3.0",
		"tsdown": "0.15.9",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"electron": ">=38"
	}
}
