{
	"name": "@kavsingh/electron-typed-ipc",
	"version": "1.0.0-dev.0",
	"description": "typed electron ipc",
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"files": [
		"./dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/common.d.mts",
				"default": "./dist/common.mjs"
			},
			"require": {
				"types": "./dist/common.d.cts",
				"default": "./dist/common.cjs"
			}
		},
		"./preload": {
			"types": "./dist/preload.d.cts",
			"default": "./dist/preload.cjs"
		},
		"./main": {
			"import": {
				"types": "./dist/main.d.mts",
				"default": "./dist/main.mjs"
			},
			"require": {
				"types": "./dist/main.d.cts",
				"default": "./dist/main.cjs"
			}
		},
		"./renderer": {
			"import": {
				"types": "./dist/renderer.d.mts",
				"default": "./dist/renderer.mjs"
			},
			"require": {
				"types": "./dist/renderer.d.cts",
				"default": "./dist/renderer.cjs"
			}
		},
		"./test/renderer": {
			"import": {
				"types": "./dist/test-renderer.d.mts",
				"default": "./dist/test-renderer.mjs"
			},
			"require": {
				"types": "./dist/test-renderer.d.cts",
				"default": "./dist/test-renderer.cjs"
			}
		}
	},
	"scripts": {
		"tdd": "vitest --typecheck --reporter=verbose",
		"test": "vitest run --typecheck --coverage",
		"typecheck": "tsc",
		"lint": "oxlint && eslint . && prettier . --check",
		"build": "tsdown",
		"typeinst": "pnpm tsc --extendedDiagnostics | grep Instantiations:"
	},
	"devDependencies": {
		"@tsconfig/node22": "22.0.5",
		"@types/node": "22.19.3",
		"@vitest/coverage-v8": "4.0.16",
		"electron": "39.2.7",
		"tsdown": "0.18.2",
		"vitest": "4.0.16"
	},
	"peerDependencies": {
		"electron": ">=38"
	}
}
