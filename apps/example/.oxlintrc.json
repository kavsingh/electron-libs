{
	"$schema": "../../node_modules/oxlint/configuration_schema.json",
	"extends": ["../../.oxlintrc.json"],
	"env": { "node": true, "browser": false },
	"ignorePatterns": [
		"dist/**",
		"reports/**",
		"**/__generated__/**",
		"!**/__generated__/__mocks__/**"
	],
	"overrides": [
		{
			"files": ["electron/*"],
			"env": { "node": true, "browser": false },
			"rules": { "unicorn/prefer-event-target": "off" }
		},
		{
			"files": ["renderer/*"],
			"env": { "node": false, "browser": true }
		}
	]
}
